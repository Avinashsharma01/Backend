<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Read Users</title>
        <!-- <link rel="stylesheet" href="../public/stylesheet/style.css"> -->
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body>
        <!-- <h1 class="text-3xl">All Users</h1> -->
        <div
            class="bg-slate-800 w-full min-h-screen text-white p-10 flex gap-2 flex-wrap"
        >
            <% users.forEach((user)=>{%>
            <div
                class="user bg-gray-500 w-[300px] h-[400px] flex flex-col items-center border-2"
            >
                <div class="img w-[100%] h-[300px] bg-gray-800">
                    <img src="<%= user.image %>" class="" alt="">
                </div>
                <div
                    class="email-id w-[100%] h-[50px] text-center bg-yellow-900 text-lg"
                >
                    <h1 class="mt-2"> <%= user.email %> </h1>
                </div>
                <div
                    class="name w-[100%] h-[50px] text-center bg-yellow-600 text-lg"
                >
                    <h1 class="mt-2"><%= user.name %></h1>
                </div>
                <div class="flex bg-white w-[100%] h-[25px] justify-around">
                    <a href="/edit/<%= user._id %>" class="text-green-500 bg-red-500 w-full"
                        >Edit User</a
                    >
                    <a href="/delete/<%= user._id %>" class="text-red-500 bg-green-500 w-full"
                        >Delete User</a
                    >
                </div>
                <a href="/" class="text-white" >Back to Home</a>
            </div>
            <%}) %>
        </div>
    </body>
</html>
