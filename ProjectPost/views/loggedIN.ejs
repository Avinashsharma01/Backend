<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <!-- <link rel="stylesheet" href="./style.css" /> -->
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            body,
            .main {
                height: 100vh;
                width: 100vw;
            }

            .main {
                color: green;
                padding: 10px;
            }

            h1 {
                font-size: 2rem;
                text-transform: uppercase;
            }

            /* Adjust text size for small screens */
            @media (max-width: 600px) {
                h1 {
                    font-size: 1.5rem;
                }
            }
            @media (max-width: 500px) {
                h1 {
                    font-size: 1rem;
                }
            }
            @media (max-width: 400px) {
                h1 {
                    font-size: 0.5rem;
                }
                .top1,
                .top2,
                .middle1,
                .middle3,
                .middle2,
                .bottom {
                    border: 0.5px solid green;
                }
            }
            @media (max-width: 200px) {
                h1 {
                    font-size: 0.2rem;
                }
            }

            /* Adjust text size for medium screens */
            @media (min-width: 601px) and (max-width: 1024px) {
                h1 {
                    font-size: 1.75rem;
                }
            }

            /* Adjust text size for large screens */
            @media (min-width: 1025px) {
                h1 {
                    font-size: 2.2rem;
                }
            }

            .first {
                width: 100%;
                height: 20%;
                padding: 5px;
            }

            .top1,
            .top2 {
                width: 100%;
                height: 50%;
                border: 2px solid green;
                display: flex;
                justify-content: center;
                align-items: center;
                margin-bottom: 5px;
            }

            .second {
                width: 100%;
                height: 70%;
                display: flex;
                padding: 5px;
            }

            .middle1,
            .middle3 {
                width: 25%;
                height: 100%;
                border: 2px solid green;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .middle2 {
                width: 50%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                border: 2px solid green;
                margin-left: 5px;
                margin-right: 5px;
            }

            .third {
                width: 100%;
                height: 10%;
                padding: 5px;
            }

            .bottom {
                width: 100%;
                height: 100%;
                border: 2px solid green;
                display: flex;
                justify-content: center;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <div class="main">
            <div class="first">
                <div class="top1">
                    <h1>Header</h1>
                </div>
                <div class="top2">
                    <h1>Navigation bar</h1>
                </div>
            </div>
            <div class="second">
                <div class="middle1">
                    <h1>Contant</h1>
                </div>
                <div class="middle2">
                    <h1>Main contant</h1>
                </div>
                <div class="middle3">
                    <h1>Contacnt</h1>
                </div>
            </div>
            <div class="third">
                <div class="bottom">
                    <h1>Footer</h1>
                </div>
            </div>
        </div>
    </body>
</html>
